<section class="text-center mt-12">
  <div class="space-y-4 inline-block bg-white/10 backdrop-blur-xl rounded-2xl shadow-xl border border-white/10 p-6">

    <!-- PayPay QR表示ボタン -->
    <button
      onclick="document.getElementById('qr-paypay').classList.toggle('hidden')"
      class="inline-block w-full px-6 py-3 bg-purple-500 hover:bg-purple-600 text-white text-lg font-semibold rounded-full shadow-lg transition duration-300"
    >
      PayPayで支援する
    </button>

    <!-- PayPay QR表示領域 -->
    <div id="qr-paypay" class="hidden animate-fade-in mt-3">
      <img
        src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=https://qr.paypay.ne.jp/p2p01_soEepVqLJ5XMzftV"
        class="mx-auto w-40 rounded-lg shadow-lg"
        alt="PayPay QRコード"
      >
      <p class="text-sm text-gray-400 mt-2">
        支援額はPayPayアプリで入力してください。
      </p>
    </div>

  </div>
</section>

<style>
  .animate-fade-in {
    animation: fadeIn 0.4s ease-out forwards;
    transform-origin: top;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
