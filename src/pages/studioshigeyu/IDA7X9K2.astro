---
const id = "IDA7X9K2";
const photos_no = 2;
const photos = [];

for (let i = 0; i < photos_no; i++) {
  const numStr = String(i + 1).padStart(3, "0");
  photos.push(`/images/studioshigeyu/${id}/${numStr}.jpg`);
}

const hasPhotos = photos.length > 0;
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Studio Shigeyu - Download Your Photos</title>
    <style>
      body {
        font-family: 'Helvetica Neue', Arial, sans-serif;
        text-align: center;
        padding: 2rem;
        background-color: #f5f5f5;
        color: #333;
      }

      h1 {
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
      }

      p.id-info {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 2rem;
      }

      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        justify-items: center;
        margin-top: 1rem;
      }

      .photo-card {
        background-color: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        transition: transform 0.2s, box-shadow 0.2s;
        max-width: 300px;
        width: 100%;
      }

      .photo-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.25);
      }

      .photo-card img {
        width: 100%;
        height: auto;
        display: block;
      }

      .download-btn {
        display: inline-block;
        margin: 1rem;
        padding: 0.7rem 1.5rem;
        background: linear-gradient(90deg, #2c7be5, #1a5ac7);
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        transition: background 0.3s;
      }

      .download-btn:hover {
        background: linear-gradient(90deg, #1a5ac7, #2c7be5);
      }

      .notice {
        margin-top: 2rem;
        font-size: 1.1rem;
        color: #777;
      }
    </style>
  </head>

  <body>
    <h1>Studio Shigeyu - Your Photos</h1>
    <p class="id-info">ID: <strong>{id}</strong></p>

    {hasPhotos ? (
      <>
        <div class="gallery">
          {photos.map(photo => (
            <div class="photo-card">
              <img src={photo} alt="Photo">
              <a class="download-btn" href={photo} download>Download</a>
            </div>
          ))}
        </div>
      </>
    ) : (
      <p class="notice">Your photos will be uploaded soon.</p>
    )}
  </body>
</html>


